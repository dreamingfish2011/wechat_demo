.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.container {
  display: flex;
  flex-flow: column wrap;
  background-color: white;
  align-items: center;
}
.pswInput{
  text-align: center;
  margin-top: 100px;
  display: flex;
  flex-direction: column;
  align-items: center;
  
}
.OkButton {
  margin-top: 50px;
  text-align: center;
  border: 1px solid #f23030;
  background-color: white;
  font-size: 16px; 
  color: #f23030;  
}
